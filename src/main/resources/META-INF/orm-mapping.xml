<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.model.Actor" table="actor">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" not-null="true"/>
        <set name="films">
            <key column="actor_id"/>
            <one-to-many class="org.example.model.ActorFilm"/>
        </set>
    </class>

    <class name="org.example.model.Director" table="director">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" not-null="true"/>
        <set name="films">
            <key column="director_id"/>
            <one-to-many class="org.example.model.Film"/>
        </set>
    </class>

    <class name="org.example.model.Film" table="film">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="title" column="title" not-null="true"/>
        <many-to-one name="director" column="director_id" class="org.example.model.Director"/>
        <set name="actors">
            <key column="film_id"/>
            <one-to-many class="org.example.model.ActorFilm"/>
        </set>
    </class>

    <class name="org.example.model.ActorFilm" table="actor_film">
        <composite-id name="id" class="org.example.model.ActorFilmId">
            <key-many-to-one name="actor" class="org.example.model.Actor" column="actor_id"/>
            <key-many-to-one name="film" class="org.example.model.Film" column="film_id"/>
        </composite-id>
    </class>

</hibernate-mapping>